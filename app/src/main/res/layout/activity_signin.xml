<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.7"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_hash"
                android:layout_width="@dimen/hash_image_width"
                android:layout_height="@dimen/hash_image_width"
                android:contentDescription="@string/app_name"
                android:layout_gravity="center"
                android:src="@drawable/ic_hash" />

            <TextView
                android:id="@+id/text_signin_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_hash"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:padding="@dimen/hash_title_padding"
                android:text="@string/hash_title"
                android:textColor="@android:color/white"
                android:textSize="@dimen/hash_title"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_sign"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/dp_70"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/rounded_shape"
                android:text="Sign in"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Or"
                android:textColor="@android:color/white"
                android:textSize="@dimen/hash_title"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_shape"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:layout_gravity="center"
                    android:src="@drawable/instragram_icon" />
                <TextView
                    android:id="@+id/txt_instragram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="Sign In"
                    android:layout_marginLeft="@dimen/dp_10" />
            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight=".3"
        android:gravity="bottom">

        <TextView
            android:id="@+id/text_term_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/hash_title_padding"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="bottom"
            android:text="@string/text_term_condition"
            android:textColor="@android:color/white" />
    </LinearLayout>



</LinearLayout>